<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>  
    

    <class name="org.LexGrid.relations.Association" table="association" lazy="true">
		
	   <cache usage="read-write"/>
     
   	   <composite-id class="org.LexGrid.LexBIG.caCore.hibernate.compositeKeys.AssociationKey">
            <key-property name="codingSchemeName"/>
            <key-property name="containerName"/>
            <key-property name="entityCodeNamespace"/>
            <key-property name="entityCode"/>
       </composite-id>

		<!-- Versionable -->
		<!-- None of these implemented for Association -->
		
				
		<!-- VersionableAndDescribable -->
        <one-to-one name="_entityDescription" access="field" class="org.LexGrid.commonTypes.EntityDescription$Association">
  			<formula>codingSchemeName</formula>
  			<formula>containerName</formula>
  			<formula>entityCodeNamespace</formula>
  			<formula>entityCode</formula>
  		</one-to-one>

		<!-- Entity -->
		<property name="_entityCode" insert="false" update="false" access="field" type="string" column="entityCode" />
		<property name="_entityCodeNamespace" insert="false" update="false" access="field" column="codingSchemeName" />
        	
     	<!-- Association -->
     	<property name="_associationName" access="field" column="associationName" />
    	<property name="_forwardName" access="field" column="forwardName" />
    	<property name="_reverseName" access="field" column="reverseName" />
    	<property name="_inverse" access="field" column="inverseId" />
    	<property name="_isNavigable" access="field" type="boolean" column="isNavigable" />
    	<property name="_isTransitive" access="field" type="boolean" column="isTransitive" />   	
    	<property name="_isAntiTransitive" access="field" type="boolean" column="isAntiTransitive" />
    	<property name="_isSymmetric" access="field" type="boolean" column="isSymmetric" />
    	<property name="_isAntiSymmetric" access="field" type="boolean" column="isAntiSymmetric" />
    	<property name="_isReflexive" access="field" type="boolean" column="isReflexive" />
		<property name="_isAntiReflexive" access="field" type="boolean" column="isAntiReflexive" />
    	<property name="_isFunctional" access="field" type="boolean" column="isFunctional" />
		<property name="_isReverseFunctional" access="field" type="boolean" column="isReverseFunctional" />
	 
	    <!-- 
	    <bag name="_sourceList" access="field" table="entityAssnsToEntity" lazy="true" outer-join="false">  
			 <key>
				<column name="codingSchemeName"/>
            	<column name="containerName"/>
            	<column name="entityCode"/>
			 </key>
			<many-to-many class="org.LexGrid.relations.AssociationSource">
				    <formula>codingSchemeName</formula>
            		<formula>containerName</formula>
            		<formula>entityCode</formula>
            		<formula>sourceEntityCodeNamespace</formula>
            		<formula>sourceEntityCode</formula>
            		<formula>targetEntityCodeNamespace</formula>
            		<formula>targetEntityCode</formula>
			</many-to-many>
		</bag> 
	    -->

        </class>
        
          <class name="org.LexGrid.commonTypes.EntityDescription" table="association"
   			entity-name="org.LexGrid.commonTypes.EntityDescription$Association">
  			
  			<cache usage="read-write"/>
  			
      		 <composite-id class="org.LexGrid.LexBIG.caCore.hibernate.compositeKeys.AssociationKey">
           		<key-property name="codingSchemeName"/>
            	<key-property name="containerName"/>
            	<key-property name="entityCodeNamespace"/>
           		<key-property name="entityCode"/>
      		</composite-id>
      		<property name="_content" access="field" column="entityDescription" />
    		</class>
    
</hibernate-mapping>


